{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist-server",
    "rootDir": ".",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],

    "noEmit": false,
    "noEmitOnError": false
  },
  "include": [
    "server/**/*.ts"
  ]
}
